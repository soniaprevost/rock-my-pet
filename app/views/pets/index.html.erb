<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="product-box text-center">
            <p><em><%= pet.kind.capitalize %></em></p>
            <h2><%= pet.name %></h2>
            <p><%= pet.city.capitalize %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

